<div class="container">
  <h1>Consultorios</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= link_to "Agrear Nuevo", new_consulting_room_path, class: "btn btn-primary" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @consulting_rooms.each do |consulting_room| %>
            <tr>
              <td><%= consulting_room.name %></td>
              <td><%= consulting_room.room_type %></td>
              <td>
                  <%= link_to edit_consulting_room_path(consulting_room), class: "btn btn-default" do %><%= image_tag "rsz_edit.png", class: "img-responsive" %><% end %>
                  <%= link_to consulting_room_path(consulting_room), class: "btn btn-default", method: :delete, data:{ confirm: "Â¿Estas seguro?" } do %><%= image_tag "rsz_trash.png", class: "img-responsive" %><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>